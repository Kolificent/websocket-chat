{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES6",
    "moduleResolution": "node10",
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
